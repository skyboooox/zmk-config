/*
 * SSD1681 1.54" 200x200 e-paper display shield overlay
 * Zephyr ssd16xx (ssd16xxfb) driver on SPI for ZMK.
 */

&pro_micro_spi {
    status = "okay";

    ssd1681: ssd16xxfb@0 {
        compatible = "solomon,ssd16xxfb";
        reg = <0>; /* CS0 */
        spi-max-frequency = <4000000>;

        /* Panel resolution */
        width = <200>;
        height = <200>;

        /* Parameter bit widths for SSD1681 */
        pp-width-bits = <8>;
        pp-height-bits = <8>;

        /* Control pins via Pro Micro header mapping on nice!nano */
        cs-gpios = <&pro_micro 10 GPIO_ACTIVE_LOW>;   /* D10 -> P0.09 */
        dc-gpios = <&pro_micro 19 GPIO_ACTIVE_HIGH>;  /* A1(D19) -> P0.02 */
        reset-gpios = <&pro_micro 20 GPIO_ACTIVE_LOW>;/* A2(D20) -> P0.29 */
        busy-gpios = <&pro_micro 21 GPIO_ACTIVE_HIGH>;/* A3(D21) -> P0.31 */
    };
};

/ {
    chosen {
        zephyr,display = &ssd1681;
    };
};
